{
  "name": "hamlet-framework/http-swoole",
  "type": "framework",
  "description": "Hamlet Framework / HTTP / Swoole",
  "keywords": ["framework", "swoole"],
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Vasily Kartashov",
      "email": "info@kartashov.com"
    }
  ],
  "config": {
    "discard-changes": true,
    "optimize-autoloader": true,
    "classmap-authoritative": true,
    "sort-packages": true
  },
  "require": {
    "php": "^7 || ^8",
    "ext-swoole": "@stable",
    "hamlet-framework/http": "@stable"
  },
  "require-dev": {
    "swoole/ide-helper": "@stable",
    "squizlabs/php_codesniffer": "@stable",
    "php-parallel-lint/php-parallel-lint": "@stable",
    "vimeo/psalm": "@stable"
  },
  "autoload": {
    "psr-4": {
      "Hamlet\\Http\\Swoole\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hamlet\\Http\\Swoole\\": "tests"
    }
  }
}
